<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/step_list_item_ingredients_height"
    android:layout_margin="@dimen/app_common_margin_small">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center_vertical"
        android:text="@string/step_list_item_ingredients_image_description"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/step_list_item_ingredient_text_size"
        android:textStyle="bold" />

    <View
        android:id="@+id/revealEffectView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorControlHighlight"
        android:visibility="invisible" />
</android.support.v7.widget.CardView>